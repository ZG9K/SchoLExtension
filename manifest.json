{
    "name": "SchoL Extension",
    "description": "Random schol changes that make it better maybe?",
    "version": "1.0",
    "manifest_version": 3,
    "host_permissions": [
        "https://learning.stmichaels.vic.edu.au/*",
        "https://learning-dev.stmichaels.vic.edu.au/*"
    ],
    "permissions": ["storage"],
    "web_accessible_resources": [
        {
            "resources": ["darkmode.css"],
            "matches": ["https://learning.stmichaels.vic.edu.au/*"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["https://learning.stmichaels.vic.edu.au/*"],
            "js": ["chrome_ext/extension.js"],
            "run_at": "document_end"
        }
    ],
    "action" : {
        "default_popup": "chrome_ext/popup.html"
    }
  }